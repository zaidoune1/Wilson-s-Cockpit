# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches JS / TS / TSX files
[*.{js,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2

# Matches CSS files
[*.css]
charset = utf-8
indent_style = space
indent_size = 2
